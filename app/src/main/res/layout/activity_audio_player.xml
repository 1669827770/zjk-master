<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_bg">

    <!--第一行：标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@mipmap/base_titlebar_bg">

        <Button
            android:id="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="标题"
            android:layout_centerInParent="true"
            android:id="@+id/tv_title" />

    </RelativeLayout>

    <!--第二行：视觉效果、艺术家-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/anim_visual_effect"
            android:id="@+id/iv_visual_effect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="艺术家"
            android:layout_gravity="center_horizontal|bottom"
            android:id="@+id/tv_artist" />

    </FrameLayout>

    <!--第三行：歌词View-->
    <view.LyricView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="6dp"
        android:id="@+id/lyric_view" />

    <!--第四行：播放时间-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:text="00:00/00:00"
        android:layout_gravity="right"
        android:layout_margin="6dp"
        android:id="@+id/tv_play_time" />

    <!--第五行：进度条-->
    <SeekBar
        android:id="@+id/sb_audio"
        style="@android:style/Widget.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="8dp"
        android:progressDrawable="@drawable/audio_seekbar_drawable"
        android:thumb="@mipmap/audio_seek_thumb"
        android:thumbOffset="0dp"
        android:indeterminate="false" />

    <!--第六行：播放控制按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <View style="@style/placeholder" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/selector_btn_playmode_order"
            android:id="@+id/btn_play_mode" />

        <View style="@style/placeholder" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/selector_btn_audio_pre"
            android:id="@+id/btn_pre" />

        <View style="@style/placeholder" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/selector_btn_audio_play"
            android:id="@+id/btn_play" />

        <View style="@style/placeholder" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/selector_btn_audio_next"
            android:id="@+id/btn_next" />

        <View style="@style/placeholder" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/selector_btn_audio_list"/>

        <View style="@style/placeholder" />

    </LinearLayout>

</LinearLayout>
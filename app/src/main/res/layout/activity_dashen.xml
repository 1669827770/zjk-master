<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/custom_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义控件"/>



    <Button
        android:id="@+id/rounded_rectangle_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圆角矩形的dialog"/>


    <Button
        android:id="@+id/middle_rounded_rectangle_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中间的圆角矩形的dialog"/>

    <Button
        android:id="@+id/btn_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页倒计时"/>

    <Button
        android:id="@+id/btn_anim_compress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="载入动画进度条"/>

    <Button
        android:id="@+id/btn_ruler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尺子"/>


    <Button
        android:id="@+id/btn_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机视频"/>


    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_change_heighTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高度可变的textview"/>

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_Recycleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recycleview使用"/>

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_change_heighRecycleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高度可变的recycleview"/>

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_pulltorefreshListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pulltorefreshListView"/>

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_poupwindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="poupwindow"/>

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn__viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="特效的viewpager"/>

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn__loopviewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无限循环viewpager"/>


    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_glide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="glide"/>

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity进出动画"/>


    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroview与Recycleviwew显示不全问题"/>


    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_sr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroview与Recycleviwew没有惯性问题"/>

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_swipRe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="swiperefreshlayout的简单使用"/>


            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_Observermodel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2种观察者模式的使用"/>


            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_pull_down_parallax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉视差动画"/>

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_six_premisson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.0权限"/>


            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_sevlen_premisson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.0权限"/>


            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_eventbus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventBus"/>

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_eventbus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventBus2"/>


            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_mvp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MVP"/>

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_rxjava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RXjava"/>


            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_transparency_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APP顶部的toolbar位置的滑动透明变化"/>

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_Immersive_statusbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沉浸式状态栏"/>

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_moblesalf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机卫士"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
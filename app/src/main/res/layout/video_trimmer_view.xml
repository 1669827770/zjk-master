<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <VideoView
        android:id="@+id/vv_trimvideo"
        android:layout_width="wrap_content"
        android:layout_height="300dp" />




    <RelativeLayout
        android:id="@+id/rl_trimcontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">




        <android.support.v7.widget.RecyclerView

            android:id="@+id/rl_trimpictureRecycleview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"/>

        <SeekBar
            android:id="@+id/sk_progressbar"
            style="@style/Video_Trim_SeekBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="visible"
            android:max="1000"
            android:layout_marginTop="30dp"
            android:progressDrawable="@android:color/transparent"
            android:secondaryProgress="0" />


        <!--这里的图片设计有问题，每个图片下面都有一差不多一个像素透明的像素，
        导致覆盖recycleview不完整,所以高度调整为61-->

        <ImageView
            android:id="@+id/iv_leftbar"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:background="@drawable/video_trim_left"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_rightbar"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/video_trim_right"
   />

    </RelativeLayout>



</LinearLayout>